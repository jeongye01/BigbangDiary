extends layout.pug 


block content
  if errorMessage 
    span=errorMessage 
  form(method="POST",enctype="multipart/form-data")
    input(type="file",name="avatar",accept="image/*,audio/*,video/*")
    input(name="title",placeholder="제목",type="text",required)
    input(name="date",placeholder="날짜",type="date",requried)
    input(name="hashtags",placeholder="해쉬태그",type="text")
    input(name="text",placeholder="내용",type="textarea",required)
    input(name="emotion",placeholder="감정",type="text",required)
    input(type="submit",value="저장")